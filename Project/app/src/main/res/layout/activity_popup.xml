<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:id="@+id/name"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:gravity="center"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/muscle"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="muscles"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/secondary_muscles"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_below="@+id/muscle"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="secondary muscles"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/equipment"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_below="@+id/secondary_muscles"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="equipment"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_below="@+id/equipment"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="description"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true"
        android:text="Add to favorites" />
</RelativeLayout>