<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:id="@+id/name"
        android:layout_width="396dp"
        android:layout_height="73dp"
        android:layout_alignStart="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-108dp"
        android:layout_marginTop="7dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/muscle_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-78dp"
        android:layout_marginTop="107dp"
        android:layout_toEndOf="@+id/textView27"
        android:fontFamily="casual"
        android:gravity="start"
        android:text="muscles"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/secondary_muscles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/muscle_info"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="370dp"
        android:fontFamily="casual"
        android:gravity="start"
        android:text="secondary muscles"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/equipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView27"
        android:layout_alignTop="@+id/description"
        android:layout_marginStart="15dp"
        android:layout_marginTop="107dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="equipment"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="267dp"
        android:layout_height="109dp"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="233dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:scrollbars="vertical"
        android:text="description"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@+id/textView28"
        android:fontFamily="casual"
        android:text="Add to favorites"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginStart="3dp"
        android:layout_marginTop="5dp"
        android:fontFamily="casual"
        android:text="Primary muscle(s):"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="101dp"
        android:fontFamily="casual"
        android:text="Secondary muscle(s):"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/equipment"
        android:layout_alignStart="@+id/equipment"
        android:layout_marginStart="-10dp"
        android:layout_marginBottom="-107dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Equipment used:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/description"
        android:layout_below="@+id/name"
        android:layout_marginStart="-26dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/button"
        android:fontFamily="casual"
        android:text="Description:"
        android:textSize="12sp" />

</RelativeLayout>